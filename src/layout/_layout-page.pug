include ./_head.pug
include ./_layout-block.pug
include ../develop/_dev.pug
include ../block/_header.pug
include ../block/_footer.pug
include ../block/_modal.pug
include ../block/_pop-up-1.pug
include ../block/_pop-up-2.pug


doctype html
html(lang="en")
  include ../_lib/_bem.js.pug

  block page-vars
    - var root = '.';
    - var file = "X-Y-Z";
    - var page = "X-Y-Z";
    - var title = "🐾";

  +head(root, file, title)
    block head

  body
    // 🔰 LAYOUT: PAGE 🔰
    .page
      //- block dev
      //-   +dev-grid(12)

      +header(root, page)

      // 👑 BLOCK: MAIN 👑
      main.main
        // 🚧 🅢🅘🅣🅔:🅣🅘🅣🅛🅔 🚧
        h1.site-title.visible-hidden= "Online-Zoo"
        block main

      +footer(root, page)

      +modal()
        +pop-up-1()
        +pop-up-2()
        block modal

    .svg-sprite(style = 'display: none')
      // 🚧 🚧 🚧 (っ◔◡◔)っ 🅢🅥🅖 🅢🅟🅡🅘🅣🅔 (✿◡‿◡) 🚧 🚧 🚧
      include ../svg/_sprite.svg.pug
      // 🚧 🚧 🚧 (っ◔◡◔)っ 🅢🅥🅖 🅢🅟🅡🅘🅣🅔 (✿◡‿◡) 🚧 🚧 🚧
      block svg-sprite
      // 🚧 🚧 🚧 (╯°□°）╯︵ ┻━┻  ┳━┳ ノ( ゜-゜ノ) 🚧 🚧 🚧

    // 👑
    script(src = `${root}/script/main.js`, type = 'module')
