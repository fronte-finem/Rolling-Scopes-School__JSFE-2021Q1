extends ../layout/_layout-page.pug

include ../layout/_layout-block.pug
include ../element/_button.pug
include ../element/_control-arrows.pug
include ../element/_control-donation.pug

block page-vars
  - var page = 'elements';
  - var file = 'elements';
  - var title = '🧱';
  - var root = '..'

mixin genBtns(txt, mods)
  - const data = {text:txt, link:'#'}
  .btns-cont
    +btn(data, mods)
    +btn-div(data, mods)
    +btn-link(root, data, mods)

block dev
  .dev-overlay.dev-grid

block main
  +layout-block("section", "btns")
    h3 Btns

    +genBtns('donate now', ['orange'])
    +genBtns('view live cam', ['orange'])
    +genBtns('send message', ['cyan', 'long'])
    +genBtns('send message', ['cyan', 'long', 'active'])
    +genBtns('choose your favourite', ['navy', 'long'])
    +genBtns('leave feedback', ['white', 'long'])
    +genBtns('view live cam', ['text'])
    +genBtns('feed', ['text', 'free'])
    +genBtns('view map', ['text'])

    .btns-cont
      +control-arrows()
      +control-arrows()
      +control-arrows()
    .btns-cont
      +control-arrows('white')
      +control-arrows('white')
      +control-arrows('white')
    .btns-cont
      +control-arrows('navy')
      +control-arrows('navy')
      +control-arrows('navy')

    .btns-cont
      +control-donation()
      +control-donation()
      +control-donation()

    .map-pins-cont
      +btn-icon({id:'map-pin'}, [self], ['panda', '🐼'])
      +btn-icon({id:'map-pin'}, [self], ['tiger', '🐯'])
      +btn-icon({id:'map-pin'}, [self], ['lion', '🦁'])
      +btn-icon({id:'map-pin'}, [self], ['gorilla', '🦍'])
      +btn-icon({id:'map-pin'}, [self], ['eagle', '🦅'])
      +btn-icon({id:'map-pin'}, [self], ['alligator', '🐊'])
      +btn-icon({id:'map-pin'}, [self], ['lemur'])
      +btn-icon({id:'map-pin'}, [self], ['coala'])

block svg-sprite
  include ../svg/_sprite-map-pin.svg.pug
