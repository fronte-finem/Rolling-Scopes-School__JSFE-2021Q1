include ../_mixin/_head.pug
include ../_mixin/_layout-block.pug

doctype html
html(lang="en")
  head
    block head-vars
      - var pageTitle = "🐾";
      - var root = '.'
    +head(pageTitle, root)

  body
    block dev
      .dev-overlay.dev-grid
      block dev-pp

    block layout
      .layout-page

        +layout-block("header", "header")
          block header

        main.main
          block main

        +layout-block("footer", "footer")
          block footer
