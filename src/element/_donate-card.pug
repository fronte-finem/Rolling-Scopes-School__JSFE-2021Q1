include ./_button.pug

mixin donate-card(root, cls, donate)
  - var self = 'donate-card';
  div(class = `${cls} ${self} ${self}--${donate.animal.kind}`,
      onclick = 'this.querySelector(".btn").click()'
     )
    figure(class = `${self}__pict`)
      img(class = `${self}__photo`,
          src = donate.animal.imgSrc,
          alt=`${donate.animal.kind} â€” ${donate.animal.name}`)
    p(class = `${self}__text`)= donate.text[0]
      each str in donate.text.slice(1)
        br
        = str
    -const data = {text: 'feed', link: donate.animal.pageLink}
    +btn-link(root, data, ['text', 'free'])
