include ./_head.pug
include ./_layout-block.pug
include ../block/_header.pug
include ../block/_footer.pug

doctype html
html(lang="en")
  block page-vars
    - var page = "X-Y-Z";
    - var file = "X-Y-Z";
    - var title = "🐾";
    - var root = '.'

  +head(title, root, file)
    block head

  body
    // 🔰 LAYOUT: PAGE 🔰
    .page
      block dev

      +header(page, root)

      // 👑 BLOCK: MAIN 👑
      main.main
        // 🚧 🅢🅘🅣🅔:🅣🅘🅣🅛🅔 🚧
        h1.site-title.visible-hidden= "Online-Zoo"
        block main

      +footer(page, root)

    .svg-sprite(style = 'display: none')
      // 🚧 🚧 🚧 (っ◔◡◔)っ 🅢🅥🅖 🅢🅟🅡🅘🅣🅔 (✿◡‿◡) 🚧 🚧 🚧
