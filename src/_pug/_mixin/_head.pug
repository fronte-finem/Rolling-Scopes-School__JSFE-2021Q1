mixin head(title = '🚧', root = '.')
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= 'Online-Zoo | ' + title
    // 🧹
    link(rel = "stylesheet", href = `${root}/styles/minireset.css`)
    // 🚧
    link(rel = "stylesheet", href = `${root}/styles/dev.css`)
    // 🌈
    link(rel = "stylesheet", href = `${root}/styles/colors.css`)
    // 🔠
    link(rel = "stylesheet", href = `${root}/assets/fonts/index.css`)
    link(rel = "stylesheet", href = `${root}/styles/fonts.css`)
    // 🏗️
    link(rel = "stylesheet", href = `${root}/styles/layout.css`)
    // 🧱
    link(rel = "stylesheet", href = `${root}/styles/element/button.css`)
    link(rel = "stylesheet", href = `${root}/styles/element/button-icon.css`)
    link(rel = "stylesheet", href = `${root}/styles/element/control-arrows.css`)
    // ⚜️
    link(rel = "stylesheet", href = `${root}/styles/componet/header.css`)
    link(rel = "stylesheet", href = `${root}/styles/componet/footer.css`)
    // ♻️
    link(rel = "stylesheet", href = './index.css')
    if block
      block
