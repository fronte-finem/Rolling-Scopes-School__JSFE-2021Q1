include ../_mixin/_head.pug
include ../_mixin/_layout-block.pug

doctype html
html(lang="en")
  head
    block head-vars
      - var pageTitle = "🐾";
      - var root = '.'
    +head(pageTitle, root)
      block head

  body
    block layout
      .layout-page

        block dev

        +layout-block("header", "header")
          block header

        main.main
          block main

        +layout-block("footer", "footer")
          block footer


    .svg-sprite(style = 'display: none')
      // 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧
      include ../../svg/_sprite.svg.pug
      // 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧
      block svg-sprite
      // 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧 🚧
