include ./_button.pug

mixin control-donation()
  - var h = 'this.value = this.value.substring(0,4)'
  .control-donation
    .sign= "$"
    input.amount(type = "number",
                 placeholder = "donation amount",
                 min = "1",
                 max = "9999",
                 oninput = h)
    +btn('button', '', 'orange', 'free')
