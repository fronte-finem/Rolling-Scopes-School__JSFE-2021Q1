extends ../layout/_layout-page.pug

include ../layout/_layout-block.pug
include ../element/_button.pug


block page-vars
  - var page = "map";
  - var file = "map";
  - var title = '🗺️';
  - var root = '..'

block main
  +layout-block("div", "map-header")
    h2.title= 'find where are the animals live'

  -
    const self = 'map';
    const data = [
      { name: 'panda', link: 'pages/zoos/panda.html', title: 'Giant panda 🐼\nSouth Central China'},
      { name: 'gorilla', link: 'pages/zoos/gorilla.html', title: 'Gorilla 🦍\nRainforests in Africa'},
      { name: 'eagle', link: 'pages/zoos/eagle.html', title: 'Bald eagle 🦅\nNorth America'},
      { name: 'lemur', link: 'pages/zoos/lemur.html', title: 'Lemur \nMadagascar'},
      { name: 'alligator', title: 'American alligator 🐊\nSoutheastern United States'},
      { name: 'tiger', title: 'Tiger 🐯\n Southeast Asia'},
      { name: 'lion', title: 'Lion 🦁\nAfrica '},
      { name: 'coala', title: 'Koala \nAustralia'},
    ];

  +layout-block('div', self)
    include ../svg/_map.svg.pug
    each item in data
      - item.id = 'map-pin'
      if item.link
        +btn-link-icon(root, item, [item.name])
      else
        +btn-icon(item, [item.name])

block svg-sprite
  include ../svg/_sprite-map-pin.svg.pug

